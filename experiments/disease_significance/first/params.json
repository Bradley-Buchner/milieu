{
    "process": "disease_significance",
    "process_params":
        {
            "n_processes": 1,
            "ppi_network": "data/networks/bio-pathways-network.txt",
            "diseases_path": "data/associations/disgenet-associations.csv",
            "disease_subset": ["C0003803"],

            "ppi_matrices": {"ci": "data/network_matrices/ci"},
            "metric_fns": ["mean_frac_direct_interactions",
                           "mean_common_interactor_score"],

            "n_random_pathways": 10000,
            "min_bucket_len": 250,

            "plots_to_params": {
                "ci": { 
                    "plot_fn": "plot_disease",
                    "disease_ids": ["C0003803"],
                    "metrics": ["mean_common_interactor_score"],
                    "plot_type": "bar",
                    "yscale": "linear",
                    "xlabel": "Mean common interactor score",
                    "ylabel": "# of pathways [count]",
                    "bins": 75,
                    "xmin": 0.0,
                    "xmax": 1.0,
                    "null_color": "#686868"
                }, 
                "di": { 
                    "plot_fn": "plot_disease",
                    "disease_ids": ["C0003803"],
                    "metrics": ["mean_frac_direct_interactions"],
                    "plot_type": "bar",
                    "yscale": "linear",
                    "xlabel": "Mean direct interactor score",
                    "ylabel": "# of pathways [count]",
                    "bins": 40,
                    "xmin": 0.0,
                    "xmax": 1.0,
                    "null_color": "#686868"
                }
            },
            
            "plot_palette": ["#E03C3F", "lightgrey"],
            "plot_font": "AppleGothic"
        }
}