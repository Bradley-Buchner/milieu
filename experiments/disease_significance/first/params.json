{
    "process": "disease_significance",
    "process_params":
        {
            "n_processes": 1,
            "ppi_network": "data/networks/bio-pathways-network.txt",
            "diseases_path": "data/associations/disgenet-associations.csv",
            "disease_subset": ["C0023470", "C0018818", "C0162671"],

            "ppi_matrices": {"ci": "data/network_matrices/ci"},
            "metric_fns": ["mean_frac_direct_interactions",
                           "mean_common_interactor_score"],

            "n_random_pathways": 100,
            "min_bucket_len": 250,

            "plots_to_params": {
                "full_distribution": {
                    "plot_fn": "plot_full_distribution",
                    "metrics": ["mean_common_interactor_score", 
                                "mean_frac_direct_interactions"],
                    "plot_type": "bar",
                    "yscale": "linear",
                    "xlabel": "p-value",
                    "bins": 50,
                    "xmin": 0.0,
                    "xmax": 0.15
                },
                "direct_interactions": { 
                    "plot_fn": "plot_disease",
                    "disease_ids": ["C0023470", "C0018818", "C0162671"],
                    "metrics": ["mean_common_interactor_score"],
                    "plot_type": "bar",
                    "yscale": "linear",
                    "xlabel": "fraction",
                    "bins": 1000,
                    "xmin": 0.0,
                    "xmax": 1.0
                }
            },
            
            "plot_palette": ["#E03C3F", "lightgrey"],
            "plot_font": "AppleGothic"
        }
}